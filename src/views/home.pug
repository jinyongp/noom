    //- link(rel="stylesheet", href="../public/css/channel.css")
    link(rel="stylesheet", href="/public/css/style.css")
    link(rel="stylesheet", href="/public/css/home.css")
  body
    main.home
      h1 Noom
      form.create-channel-form
        input(placeholder="채널을 생성해주세요!" required type="text" name="channel")
        button(type="submit")
          i.fas.fa-sign-in-alt
        small.full
      section.channel-list
        div.header
          h2 Channels
          form.nickname-form.changed
            input(placeholder="닉네임을 써야해요!" required type="text" name="nickname")
            button(type="submit")
              i.fas.fa-check
              i.fas.fa-spinner
          span.active-count 0
        ul
      footer
        span.super-cool Zoom Clone Challenge by NomadCoders 🔥
        span.copyright
          | Created by&nbsp
          a(href="https://github.com/jinyongp" target="_blank" ref="noopener noreferer") jinyongp
    script(src="/socket.io/socket.io.js")
